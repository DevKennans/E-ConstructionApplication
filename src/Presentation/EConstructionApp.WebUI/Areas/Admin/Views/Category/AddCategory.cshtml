@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="add-category-container ">
    @if (TempData["ErrorMessageFromCategory"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
            @TempData["ErrorMessageFromCategory"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (TempData["SuccessMessageFromCategory"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
            @TempData["SuccessMessageFromCategory"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <form method="post" class="add-category-form">
        <div class="form-group">
            <label for="categoryName">Category Name</label>
            <input type="text" id="categoryName" name="name" class="form-control" placeholder="Enter category name" required minlength="2" maxlength="250" />
        </div>
        <button type="submit" class="btn-submit">Add Category</button>
    </form>
</div>

<style>
    .add-category-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f4f7fc;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .form-title {
        font-size: 24px;
        margin-bottom: 20px;
        color: #333;
    }

    .add-category-form {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        text-align: left;
    }

        .form-group label {
            font-size: 14px;
            color: #555;
            margin-bottom: 8px;
        }

        .form-group input {
            padding: 12px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 5px;
            outline: none;
            transition: border-color 0.3s;
        }

            .form-group input:focus {
                border-color: #6c63ff;
            }

    .btn-submit {
        padding: 12px;
        font-size: 16px;
        background-color: #6c63ff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-submit:hover {
            background-color: #5a54e5;
        }
    .alert {
        margin-top: 15px;
        font-size: 14px;
    }

    .close {
        border: none;
        background: none;
        font-size: 20px;
        cursor: pointer;
    }
</style>

<script>
    setTimeout(() => {
        let alerts = document.querySelectorAll('.alert');
        alerts.forEach(alert => {
            alert.classList.remove("show");
            alert.classList.add("fade");
            setTimeout(() => alert.remove(), 500);
        });
    }, 3000);
</script>
