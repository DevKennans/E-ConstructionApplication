@model EConstructionApp.WebUI.Areas.Admin.Models.LoginViewModel

@{
    ViewData["Title"] = "Admin - Login";
    Layout = null;
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>
    <form method="post" asp-action="Login" autocomplete="off">
        <div class="d-flex justify-content-center align-items-center vh-100 bg-dark">
            <div class="bg-dark text-white p-5 rounded-3 shadow-lg" style="max-width: 600px; width: 100%;">
                <div class="text-center">
                    <h1 class="h3 mb-4">E-Construction</h1>
                    <p class="lead">Hello! Let's get started</p>
                    <p>Sign in to continue.</p>
                    @if (ViewBag.ErrorMessageFromLogin != null)
                    {
                        <div class="alert alert-danger mt-3">
                            @ViewBag.ErrorMessageFromLogin
                        </div>
                    }
                    <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>

                    <div class="form-group position-relative my-4">
                        <input asp-for="Username" class="form-control form-control-lg rounded-pill border-secondary" type="text" placeholder="Username" />
                        <span asp-validation-for="Username" class="text-danger position-absolute end-0 top-50 translate-middle-y pe-3"></span>
                    </div>

                    <div class="form-group position-relative my-4">
                        <input asp-for="Password" id="passwordInput" class="form-control form-control-lg rounded-pill border-secondary" type="password" placeholder="Password" />
                        <i class="bi bi-eye position-absolute top-50 end-0 translate-middle-y me-3 text-muted fs-5" id="togglePassword" style="cursor: pointer;"></i>
                        <span asp-validation-for="Password" class="text-danger position-absolute end-0 top-50 translate-middle-y pe-3"></span>
                    </div>

                    <button class="btn btn-primary w-100 py-2 my-3 rounded-pill" type="submit">SIGN IN</button>
                </div>
            </div>
        </div>
    </form>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>

<script>
    document.getElementById('togglePassword').addEventListener('click', function () {
        let passwordField = document.getElementById('passwordInput');
        let icon = this;

        if (passwordField.type === "password") {
            passwordField.type = "text";
            icon.classList.remove('bi-eye');
            icon.classList.add('bi-eye-slash');
        } else {
            passwordField.type = "password";
            icon.classList.remove('bi-eye-slash');
            icon.classList.add('bi-eye');
        }
    });
</script>


