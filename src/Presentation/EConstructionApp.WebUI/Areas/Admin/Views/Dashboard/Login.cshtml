@model EConstructionApp.WebUI.Areas.Admin.Models.LoginViewModel

@{
    ViewData["Title"] = "Admin - Login";
    Layout = null;
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="sweetalert2.min.css">
</head>
<body>
    <form method="post" asp-action="Login" autocomplete="off">
        <div class="d-flex justify-content-center align-items-center vh-100 bg-dark">
            <div class="bg-dark text-white p-5 rounded-3 shadow-lg" style="max-width: 600px; width: 100%;">
                <div class="text-center">
                    <h1 class="h3 mb-4">E-Construction</h1>
                    <p class="lead">Hello! Let's get started</p>
                    <p>Sign in to continue.</p>

                    <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>

                    <div class="form-group position-relative my-4">
                        <input asp-for="Username" class="form-control form-control-lg rounded-pill border-secondary" type="text" placeholder="Username" />
                        <span asp-validation-for="Username" class="text-danger position-absolute end-0 top-50 translate-middle-y pe-3"></span>
                    </div>

                    <div class="form-group position-relative my-4">
                        <input asp-for="Password" class="form-control form-control-lg rounded-pill border-secondary" type="password" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger position-absolute end-0 top-50 translate-middle-y pe-3"></span>
                    </div>

                    <button class="btn btn-primary w-100 py-2 my-3 rounded-pill" type="submit">SIGN IN</button>
                </div>
            </div>
        </div>
    </form>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>

<style>
    input[type="checkbox"] {
        width: 1.25rem;
        height: 1.25rem;
        border: 2px solid #0ef;
        border-radius: 0.25rem;
        position: relative;
    }

        input[type="checkbox"]:checked {
            background-color: #0ef;
        }

            input[type="checkbox"]:checked::after {
                content: "";
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%) rotate(45deg);
                width: 5px;
                height: 10px;
                border: solid #fff;
                border-width: 0 2px 2px 0;
            }

    label {
        cursor: pointer;
    }
</style>
